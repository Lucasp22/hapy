<%= form_for @box do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :image %>
  <%= f.text_field :image %>

  <fieldset>
    <%= f.label :in, "in" %>
    <%= f.radio_button :in, true %>
    <%= f.label :in, "out" %>
    <%= f.radio_button :in, false %>
  </fieldset>

  <fieldset>
    <%= f.label :empty %>
    <%= f.radio_button :empty, true %>
    <%= f.label :empty, "full" %>
    <%= f.radio_button :empty, false %>
  </fieldset>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :user_id %>
  <%= f.select :user_id, User.pluck(:email, :id), :include_blank => true %>

  <%= f.submit %>
<% end %>
