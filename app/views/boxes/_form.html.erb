<div class="container">

  <div class="card-body bg-light mb-3" style="width: 30rem;">

    <%= form_for(@box, :html => { :multipart => true }) do |f| %>

        <%= f.label :title %>
        <%= f.text_field :title, :class => "form" %>
        <br>
        <br>
          <%= f.label :image %><br>
          <%= f.file_field :image %>


          <br>
          <br>
            <%= f.label :in, "in",:class => "btn btn-light"%>
            <%= f.radio_button :in, true  %>

            <%= f.label :in, "out",:class => "btn btn-light" %>
            <%= f.radio_button :in, false %>

            <%= f.label :empty,:class => "btn btn-light"  %>
            <%= f.radio_button :empty, true %>

            <%= f.label :empty, "full",:class => "btn btn-light"  %>
            <%= f.radio_button :empty, false %>



        <br>
        <%= f.label :location %>
        <%= f.text_field :location, :class => "form-control" %>

        <br>
        <%= f.label :user_id %>
        <%= f.select :user_id, User.pluck(:email, :id), :include_blank => true %>
        <br>
        <br>


        <%= f.submit "Update", :class => "btn btn-dark"    %>
    <% end %>

  </div>

</div>
