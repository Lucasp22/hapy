<!DOCTYPE html>
<html>
  <head>
    <title>Happy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1>HAPPY BOXES :-)</h1>

  <nav>
    <% if @current_user.present? %>
      <h1>Welcome back
        <%= @current_user.email %></h1>
        <%= link_to 'Home', '/' %>
        <%= link_to 'Logout', '/login',
                    data: {:confirm => 'Are you sure?'}, :method => :delete %>
        <%= link_to 'Create box', 'box', :method => :get %>
        <%= link_to 'See box', 'boxes', :method => :get %>
      <% else %>
      <%= link_to 'Login', '/login',
                  data: {}, :method => :get %>
        <%= link_to 'Sign up', '/users/new',
                    data: {}, :method => :get %>
    <% end %>
  </nav>

    <%= yield %>


  </body>
</html>
